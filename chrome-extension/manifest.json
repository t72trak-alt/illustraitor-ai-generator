{
    "manifest_version": 3,
    "name": "Illustraitor AI",
    "version": "1.0.0",
    "description": "AI Image Generator with DALL-E 3 and Unsplash",
    "permissions": [
        "downloads","storage"],
    "host_permissions": [
        "https://api.openai.com/*",
        "https://illustraitor-ai-generator.onrender.com/*"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_title": "Illustraitor AI"
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}

